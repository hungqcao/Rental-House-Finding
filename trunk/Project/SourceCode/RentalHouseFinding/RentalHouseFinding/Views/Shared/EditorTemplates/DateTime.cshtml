@model Nullable<System.DateTime>
@if ( Model.HasValue ) {
   @Html.TextBox( "" , Model.Value.ToString("MM/dd/yyyy") , new  { @class = "textbox" } )
}
else {
   @Html.TextBox( "" , string.Empty , new { @class = "textbox" } )
}

@{
string name = ViewData.TemplateInfo.HtmlFieldPrefix;
string id = name.Replace( ".", "_" );
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#@id").datepicker
            ({
                showStatus: true,
                showWeeks: true,
                highlightWeek: true,
                numberOfMonths: 1,
                showAnim: "scale",
                showOptions: {
                    origin: ["bottom", "left"]
                }
            });
    });
</script>