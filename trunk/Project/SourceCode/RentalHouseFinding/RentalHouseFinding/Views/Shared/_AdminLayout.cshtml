<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style.css")">
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/admin_style.css")" rel="stylesheet" type="text/css">
    <script src="@Url.Content("~/Content/js/jquery.mousewheel.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery.jscrollpane.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/mwheelIntent.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/jquery.screwdefaultbuttonsV2.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('input:checkbox').screwDefaultButtons({
                image: 'url(@Url.Content("~/Content/images/index_cbx.png)")',
                width: 17,
                height: 17
            });
            $('#header_panel').show();
            $("a.close").click(function () {
                $(this).parent().fadeOut();
            });
        });
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
	        <div id="containerLogo" class="left">
    	        <a href="@Url.Content("~")"  id="logoText">
        	        <img src="@Url.Content("~/Content/images/Intro_text.png")" alt="5house.vn" />
                </a>
                <span id="slogan">Công cụ tìm kiếm nhà cho thuê ở Việt Nam</span>
            </div>
            <div id="containerLogin" class="right">
    	        @Html.Partial("_LogOnPartial")
            </div>
        </div>
        <div id='cssmenu'>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Manage Posts", "Index", "ManagePosts")</li>
                <li>@Html.ActionLink("Manage categories", "Index", "ManageCategories")</li>
                <li>@Html.ActionLink("Manage roles", "Index", "ManageRoles")</li>
                <li class='active has-sub'><a href="#">Manage locations</a>
                    <ul>
                        <li>@Html.ActionLink("View all city", "Index", "ManageProvinces")</li>
                        <li>@Html.ActionLink("View all district", "Index", "ManageDistrict")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Manage moderators", "Index", "Moderator")</li>
                <li class='active has-sub'><a href="#">Manage bad words</a>
                    <ul>
                        <li>@Html.ActionLink("Badword types", "Index", "ManageBadwordType")</li>
                        <li>@Html.ActionLink("Badword", "Index", "ManageBadword")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Manage bad posts", "Index", "ManageBadpost")</li>
                <li>@Html.ActionLink("Manage Post status", "Index", "ManagePostStatus")</li>
                <li>@Html.ActionLink("Manage payments", "Index", "ManagePayment")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </div>
        <section id="main">
            @RenderBody()
        </section>
        <div id="footer">
            <p>Bản quyền thuộc về &copy; 2013 | 5house.vn</p>
        </div>
    </div>
</body>
</html>