                        </ul>
                    </li>
                    <li>@Html.ActionLink("Manage moderators", "Index", "Moderator")</li>
                    <li>@Html.ActionLink("Manage bad posts", "Index", "BadPost")</li>
                    <li>@Html.ActionLink("Manage payments", "Index", "ManagePayment")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </header>
        <section id="main">
