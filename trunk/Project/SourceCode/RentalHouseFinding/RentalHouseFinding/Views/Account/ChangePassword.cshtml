@model RentalHouseFinding.Models.ChangePasswordModel
@{
    ViewBag.Title = "Đổi mật khẩu";

    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div id="container">
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="message-sv" style="width:320px; margin: 0 auto;">
    @if (!string.IsNullOrEmpty(@ViewBag.Message))
    {
        <div class="message-notification success">
            <a class="close"></a>
            <div>
                @ViewBag.Message
            </div>
        </div>
    }
</div>
<div class="clear"></div>
<div class="login-regis" id="loginPanel">
@using (Html.BeginForm())
{
    <div class="userInfo" style="width:325px;margin: 0 auto;">
        <h2>Điền thông tin phía bên dưới để thay đổi mật khẩu:</h2>
        <text style="color: red; font-weight: bold">@ViewBag.error</text> 
        <text style="color: green; font-weight: bold">@ViewBag.success</text>
        <div class="blockInfo" style="margin-top:20px">
            @Html.LabelFor(m => m.OldPassword)
            <div class="clear"></div>
            <div class="textbox">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "tbxRegister" })
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
        </div>
        <div class="clear"></div>
        <div class="blockInfo" style="margin-top:20px">
            @Html.LabelFor(m => m.NewPassword)
            <div class="clear"></div>
            <div class="textbox">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "tbxRegister" })
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
        </div>
        <div class="clear"></div>
        <div class="blockInfo" style="margin-top:20px">
            @Html.LabelFor(m => m.ConfirmPassword)
            <div class="clear"></div>
            <div class="textbox">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "tbxRegister" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="notification">
        <img id="infoIcon" src="../../Content/images/login_infoIcon.png"/>
        <span id="message" style="width: 300px">@Html.ValidationSummary(true, "Đổi mật khẩu không thành công, xin vui lòng kiểm tra lại thông báo và thử lại.")</span>
    </div>
    <div class="buttons">
        <input type="submit" id="btnSaveInfo" value=""/>
    </div>
}
</div>
</div>