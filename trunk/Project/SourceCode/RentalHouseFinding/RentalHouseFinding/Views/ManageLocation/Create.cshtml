@model RentalHouseFinding.Models.Locations

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="rolesManageTextBox">
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="rolesManageTextBox">
            <div class="editor-label">
                @Html.LabelFor(model => model.DistrictId, "District")
            </div>
            <div class="editor-field">
                @Html.DropDownList("DistrictId", String.Empty)
                @Html.ValidationMessageFor(model => model.DistrictId)
            </div>
        </div>
        <div style="display: none;">
            <div class="editor-label">
                @Html.LabelFor(model => model.IsCreatedByUser)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.IsCreatedByUser)
                @Html.ValidationMessageFor(model => model.IsCreatedByUser)
            </div>
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
