@model IEnumerable<RentalHouseFinding.Models.BadWords>

@{
    ViewBag.Title = "Danh sách từ xấu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    if (ViewBag.ErrorMsg != null)
    {
        @ViewBag.ErrorMsg
    }
}
@using (Html.BeginForm("Index", "ManageBadword", FormMethod.Post))
{
    <div class="districtDiv">
    <div id="districtSelect">
    @Html.DropDownList("TypeId",
        (IEnumerable<SelectListItem>)ViewBag.TypesList,
            "Phân loại", new { @class = "selectAd" })
            </div>
            <div id="districtSubmit">
            <input type="submit" name="Search" class="searchLink" value="Search" />
            </div>
            </div>
}

<table>
    @{
    if (Model != null)
    {
    <tr>
        <th>
            STT
        </th>
        <th>
            Từ
        </th>
        <th>
            Phân loại
        </th>
    </tr>

    int i = 1;
    foreach (var item in Model) {
        <tr>
            <td>
             @i
            </td>
            <td>
                @Html.ActionLink(item.Word, "Edit", new { id=item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BadWordType.Name)
            </td>
        </tr>
        i += 1;
    }
    }
    else
    {
        <h2>Không có từ xấu</h2>
    }
}
</table>

<br/>
    <div class="createLink"><a href="../../ManageBadword/Create"><img src="../../Content/images/createnew.png" /></a>
    </div>


    <div class="listbadword"><a href="../../ManageBadwordType"><img src="../../Content/images/listbadword.png" /></a>
    </div>