@model RentalHouseFinding.Models.Categories

@{
    ViewBag.Title = "Tạo phân loại bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
    <div class="rolesManageDiv">
 
        <div class="editor-label">
            @Html.LabelFor(model => model.Name, "Phân loại")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        </div>
         <div class="rolesManageDiv">
        <div class="editor-label">
            @Html.LabelFor(model => model.Description, "Mô tả")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        </div>
         <div style="display:none;" class="rolesManageCheck">
        <div class="editor-label">
            @Html.LabelFor(model => model.IsDeleted, "Đã xóa")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsDeleted)
            @Html.ValidationMessageFor(model => model.IsDeleted)
        </div>
</div>
          <div class="rolesManageSubmit">
        <p>
            <input type="submit" class="createLink" value="Tạo mới" />
        </p>
        </div>
    </fieldset>
}


 
    <div class="backLink"> <a href="../ManageCategories/Index"><img src="../../Content/images/Back.png" /></a>
    </div>

