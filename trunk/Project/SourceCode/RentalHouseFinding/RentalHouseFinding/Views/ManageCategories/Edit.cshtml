@model RentalHouseFinding.Models.Categories

@{
    ViewBag.Title = "Sửa phân loại bài viết"; Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        @Html.HiddenFor(model => model.Id)
        <div class="rolesManageDiv">
        <div class="editor-label">
            @Html.LabelFor(model => model.Name, "Phân loại")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
     <div class="rolesManageDiv">
        <div class="editor-label">
            @Html.LabelFor(model => model.Description, "Mô tả")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
</div>
 <div class="rolesManageCheck">
        <div class="editor-label">
            @Html.LabelFor(model => model.IsDeleted, "Đã xóa")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsDeleted)
            @Html.ValidationMessageFor(model => model.IsDeleted)
        </div>
</div>
 <div class="rolesManageSubmit">
        
            <input type="submit" class="saveChange" value="Tạo mới" />
        
        </div>
        
    </fieldset>
}

<a href="../../ManageCategories/Index">
    <div class="backLink"  style="float:left;">
    </div></a>
