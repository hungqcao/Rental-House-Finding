@model RentalHouseFinding.Models.AnswerViewModel
@{
    int questionId = Convert.ToInt32(ViewData["questionId"]);
}
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

@using (Ajax.BeginForm("sendanswer", "questions", new AjaxOptions { UpdateTargetId = "answers", InsertionMode = InsertionMode.InsertAfter }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <input id = "QuestionId" name="QuestionId" value="@questionId" type="hidden" />
        <div class="editor-label">
            @Html.LabelFor(model => model.ContentAnswer)
        </div>
        <div class="editor-label">
            @Html.EditorFor(model => model.ContentAnswer)
            @Html.ValidationMessageFor(model => model.ContentAnswer)
        </div>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>
}

