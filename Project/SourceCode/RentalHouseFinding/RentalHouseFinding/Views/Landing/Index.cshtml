    </div>
    <div id="searchInfo">
        <span id="searchTitle">Bạn muốn tìm:</span>
        <div class="clear"></div>
        <div id="buttonSearch">
            @Html.HiddenFor(model => model.PostIdSuggest)
	        @Html.DropDownListFor(model => model.CategoryId, null, new { @class = "select" })
            @Html.ValidationMessageFor(model => model.CategoryId)
            @Html.DropDownListFor(model => model.ProvinceId, null, new { @class = "select" })
            @Html.ValidationMessageFor(model => model.ProvinceId)   
	        @Html.DropDownListFor(model => model.DistrictId, null, new { @id = "DistrictId", @class = "select", @style="margin-right:0px" })
            <div class="clear">
            </div>
        </div>
        <div id="selectSearch">
	        @Html.TextBoxFor(model => model.KeyWord, new { @id = "KeyWord", @class = "txt", @placeholder = "từ khóa thêm" })
            <input type="submit" id="btnSubmit" value=""/>
            <div class="clear">
            </div>
             @Html.ActionLink("Tìm kiếm nâng cao", "Index", "AdvancedSearch", null, new { @id = "advanceSearchText" })
            <div class="clear">
            </div>
        </div>
        <div style="text-align: center;">
            <img src="@Url.Content("~/Content/images/round_shape.png")"/>
        </div>
        <h3 style="margin-top: 30px;">
