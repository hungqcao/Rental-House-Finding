@model RentalHouseFinding.Models.SearchViewModel
@{
    ViewBag.Title = "Home Page";
    this.Layout = "_LayoutLanding.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
<script src="@Url.Content("~/Scripts/RHFScripts.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/DDLScripts.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Vui lòng kiểm tra lại thông tin như thông báo bên dưới!", new { style = "color:red" })
@using (Html.BeginForm())
{
    <div id="searchInfo">
        <div id="selectSearch">
            @Html.HiddenFor(model => model.PostIdSuggest)
	        @Html.DropDownList("CategoryId", null, new { @class = "select" })
            @Html.ValidationMessageFor(model => model.CategoryId)
	        @Html.DropDownList("ProvinceId", (IEnumerable<SelectListItem>)ViewBag.ProvinceId, "Chọn Tỉnh/Thành phố", new { @class = "select" })
            @Html.ValidationMessageFor(model => model.ProvinceId)   
	        @Html.DropDownListFor(model => model.DistrictId,
                new SelectList(Enumerable.Empty<SelectListItem>(), "Id", "Name"), "Chọn Quận/Huyện",
                new { @id = "DistrictId", @class = "select" })
	        @Html.TextBoxFor(model => model.KeyWord, new { @id = "KeyWord", @class = "txt" })
            <input type="submit" value="Submit" class="submit"/>
	        <div class="clear"></div>
	    </div>
	 <h3 style=" margin-top: 30px;">Nơi bạn có thể tìm & đăng thông tin thuê nhà nhanh và hiệu quả</h3>
    </div>
    <div id="advanceSearch">
        <div id="advanceSearch1" class="left">
            <h3>Tìm kiếm nâng cao, kết quả chính xác</h3>
            <div class="detail">
            Bạn hiểu rõ yêu cầu tìm nhà của mình, hãy sử dụng ngay tìm kiếm nâng cao.
            </div>
            @Html.ActionLink("AdvancedSearch", "Index", "AdvancedSearch",null, new { @id = "linkAdvanceSearch" })
        </div>
        <div id="advanceSearch2" class="left">
            <h3>Tương tác trực quan trên bản đồ</h3>
            <div class="detail">
                Kết quả được hiện thị trực tiếp trên bản đồ thật giúp bạn có mắt nhìn trực quan nhất về địa điểm bạn đang quan tâm.
            </div>
            <img src="@Url.Content("~/Content/images/map.png")"  style="margin-left: 50px; margin-top: 35px;"/>
        </div>
        <div id="advanceSearch3" class="left">
            <h3>Đăng tin nhanh chóng với 3 bước nhỏ</h3>
            <div class="detail">Bạn muốn đăng tin lên? Không cần phải đăng kí, đăng tin ngay trong 3 bước đơn giản.</div>
            @Html.ActionLink("Đăng tin ngay", "Create", "Post",null, new { @id = "linkDangtin" })
        </div>
        <div class="clear"></div>
    </div>
}