            </div>
             @Html.ActionLink("AdvancedSearch", "Index", "AdvancedSearch", null, new { @id = "linkAdvanceSearch" })
        </div>
        <div id="advanceSearch2" class="left">
            <h3>
                Tương tác trực quan trên bản đồ</h3>
            <div class="detail">
                Kết quả được hiện thị trực tiếp trên bản đồ thật giúp bạn có mắt nhìn trực quan
                nhất về địa điểm bạn đang quan tâm.
            </div>
            <img src="@Url.Content("~/Content/images/map.png")"  style="margin-left: 100px; margin-top: 35px; display:none;"/>
        </div>
        <div id="advanceSearch3" class="left">
            <h3>
                Đăng tin nhanh chóng với 2 bước nhỏ</h3>
            <div class="detail">
                Bạn muốn đăng tin lên? <b>Không cần đăng kí</b>, <b><a  href="@Url.Content("~/post/create")" style="color:#017171;text-decoration:none;">đăng tin ngay</a></b> trong 2 bước đơn giản.</div>
            @Html.ActionLink("Đăng tin ngay", "Create", "Post", null, new { @id = "linkDangtin" })
        </div>
        <div class="clear">
        </div>
    </div>
}
@section head{
    <script type="text/javascript">
        $(document).ready(function () {
            $('select.select').each(function () {
                var title = $(this).attr('title');
                var id = $(this).attr('id');
                if ($('option:selected', this).val() != '') {
                    title = $('option:selected', this).text();
                } else {
                    $('option:selected', this).val('0');
                    title = $('option:selected', this).val('0').text();
                }
                $(this)
                .css({ 'opacity': 0 })
                .after('<span class="select" id="sp' + id + '">' + title + '</span>')
                .change(function () {
                    val = $('option:selected', this).text();
                    $(this).next().text(val);
                })
            });
        });
        </script>
}