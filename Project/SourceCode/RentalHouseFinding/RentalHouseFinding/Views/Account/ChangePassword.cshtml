@model RentalHouseFinding.Models.ChangePasswordModel
@{
    ViewBag.Title = "Đổi mật khẩu";

    Layout = "~/Views/Shared/_LayoutAuthen.cshtml";
}
@section current
{
    <ul id="menu">
        <li class="active"><a href="/Home">Trang chủ</a></li>
        <li><a href="/Home">Liên hệ</a></li>
    </ul>
}
<div id="container">
    <h2>
        Đổi mật khẩu</h2>
         <text style="color: red; font-weight: bold">@ViewBag.error</text> 
    <text style="color: green; font-weight: bold">@ViewBag.success</text> 
<p>
    Điền thông tin phía bên dưới để thay đổi mật khẩu:
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Mật khẩu cung cấp không phù hợp hoặc mật khẩu mới không đúng.")
    <p>
        @Html.LabelFor(m => m.OldPassword)
    </p>    
    <p>
        @Html.PasswordFor(m => m.OldPassword)
        @Html.ValidationMessageFor(m => m.OldPassword)
    </p>    
    <p>
        @Html.LabelFor(m => m.NewPassword)
    </p>    
    <p>
        @Html.PasswordFor(m => m.NewPassword)
        @Html.ValidationMessageFor(m => m.NewPassword)
    </p>    
    <p>
        @Html.LabelFor(m => m.ConfirmPassword)
    </p>    
    <p>
        @Html.PasswordFor(m => m.ConfirmPassword)
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </p>    
    <p>
        <button type="submit" class="t-button t-state-default">
            Lưu thay đổi</button>
    </p>    
}
</div>