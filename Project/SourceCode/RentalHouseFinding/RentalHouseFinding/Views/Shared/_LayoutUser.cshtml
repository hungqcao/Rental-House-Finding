<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/User/styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    
  <script>
      $(function () {
          $("#tabs").tabs({
              beforeLoad: function (event, ui) {
                  ui.jqXHR.error(function () {
                      ui.panel.html(
            "Couldn't load this tab. We'll try to fix this as soon as possible. " +
            "If this wouldn't be a demo.");
                  });
              }
          });
      });
  </script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style.css")">
   
</head>
<body>
    <div class="page">
        <div id="header">
	        <div id="containerLogo" class="left">
    	        <a href="@Url.Content("~")"  id="logoText">
        	        <img src="@Url.Content("~/Content/images/Intro_text.png")" alt="5house.vn" />
                </a>
                <span id="slogan">Công cụ tìm kiếm nhà cho thuê ở Việt Nam</span>
            </div>
            <div id="containerLogin" class="right">
    	        @Html.Partial("_LogOnPartial")
            </div>
        </div>
        <div id="tabs">
            <ul>
                <li><a href="#content">Thông tin người dùng</a></li>
                <li><a href="user/Favorites">Danh sách ưa thích</a></li>
                <li><a href="user/posts">Danh sách bài đăng</a></li>
                <li><a href="user/questions">Danh sách câu hỏi</a></li>
            </ul>
        <div id="content">
            @RenderBody()
        </div>
        <footer>
        </footer>
    </div>
</body>
</html>
