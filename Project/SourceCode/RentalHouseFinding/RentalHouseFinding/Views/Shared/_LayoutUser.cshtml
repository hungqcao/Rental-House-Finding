<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/User/styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style.css")">
   
</head>
<body>
    <div class="page">
        <div id="header">
	        <div id="containerLogo" class="left">
    	        <a href="@Url.Content("~")"  id="logoText">
        	        <img src="@Url.Content("~/Content/images/Intro_text.png")" alt="5house.vn" />
                </a>
                <span id="slogan">Công cụ tìm kiếm nhà cho thuê ở Việt Nam</span>
            </div>
            <div id="containerLogin" class="right">
    	        @Html.Partial("_LogOnPartial")
            </div>
            <div id='cssmenu' class="clear">
                <ul>
                   <li>@Html.ActionLink("Thông tin người dùng", "info", "user")</li>
                   <li>@Html.ActionLink("Danh sách bài đăng", "posts", "user")</li>
                   <li>@Html.ActionLink("Ưa thích", "favorites", "user")</li>
                   <li class='active has-sub'><a href='#'><span>Tin nhắn</span></a>
                      <ul>
                        <li>@Html.ActionLink("Tin nhắn đã nhận", "index", "questions")</li>
                        <li>@Html.ActionLink("Tin nhắn đã gửi", "index", "sentquestion")</li>
                      </ul>
                   </li>
                </ul>
            </div>
        </div>
        <div id="content">
            <div id="user-content">
                <div class="wrapper">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div id="footer">
            <p>Bản quyền thuộc về &copy; 2013 | 5house.vn</p>
        </div>
</body>
</html>
