@model IEnumerable<RentalHouseFinding.Models.PostViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>View a post</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<script src="http://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $.ajax({
            url: 'home/GetSectionSideListPost',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html',
            data: {
                skipNum: 0,
                takeNum: 10
            }
        })
        .success(function (result) {
            $('#postContent').html(result);
        })
        .error(function (xhr, status) {
            alert(xhr.responseText);
        });


        var marker;
        var map;
        function initialize() {
            var mapProp = {
                center: new google.maps.LatLng($(1).val(), $(1).val()),
                zoom: 16,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById("mapContainer"), mapProp);
            marker = new google.maps.Marker({
                position: new google.maps.LatLng($('#Lat').val(), $('#Lon').val()),
                map: map
            });

        }
        google.maps.event.addDomListener(window, 'load', initialize);
        google.setOnLoadCallback(initialize);
    });
</script>

<div class="success-mess">
                
</div>
<div id= "View-post-page">
    <div id = "postContent" style="float:left;" ></div>
    <div class = "map" style="float:right;">
        <div id="mapContainer" style="width:500px;height:380px;"></div>
    </div>
    <div class = "clear" style="clear:both;">
    </div>
</div>
